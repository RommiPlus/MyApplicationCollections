<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.myapplicationcollections.MainActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/ViewStyle"
        android:layout_alignParentTop="true"
        android:text="@string/project_name"/>

    <Button
        android:id="@+id/button"
        style="@style/ViewStyle.Button"
        android:layout_below="@+id/textView"
        android:onClick="showToastPopularMovie"
        android:text="@string/popular_movies"/>

    <Button
        android:id="@+id/button2"
        style="@style/ViewStyle.Button"
        android:layout_below="@+id/button"
        android:onClick="showToastStockHawk"
        android:text="@string/stock_hawk"/>

    <Button
        android:id="@+id/button3"
        style="@style/ViewStyle.Button"
        android:layout_below="@+id/button2"
        android:onClick="showToastBuildBigger"
        android:text="@string/build_bigger"/>

    <Button
        android:id="@+id/button4"
        style="@style/ViewStyle.Button"
        android:layout_below="@+id/button3"
        android:onClick="showToastMakeMaterial"
        android:text="@string/make_material"/>

    <Button
        android:id="@+id/button5"
        style="@style/ViewStyle.Button"
        android:layout_below="@+id/button4"
        android:onClick="showToastGoUbiquitous"
        android:text="@string/go_ubiquitous"/>

    <Button
        android:id="@+id/button6"
        style="@style/ViewStyle.Button"
        android:layout_below="@+id/button5"
        android:onClick="showToastCapstone"
        android:text="@string/capstone"/>
</RelativeLayout>
